<Window x:Class="clock.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:clock.ViewModels;assembly=clock.Lib"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="Clock" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Width="300"
        Height="135"
        Loaded="Window_Loaded"
        Deactivated="Window_Deactivated">



    <Window.Resources>
        <Style x:Key="BlinkingTextStyle" TargetType="TextBlock">
            <Setter Property="Opacity" Value="1.0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Engine.IsPaused}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity" Duration="0:0:1.5">
                                    <!-- 0~0.75秒: 亮 (1.0) -->
                                    <DiscreteDoubleKeyFrame KeyTime="0:0:0.0" Value="1.0"/>
                                    <!-- 0.75~1.5秒: 暗 (0.2) -->
                                    <DiscreteDoubleKeyFrame KeyTime="0:0:0.75" Value="0.2"/>
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1.0" Duration="0:0:0"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FlatProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid x:Name="TemplateRoot">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"/>
                            <Rectangle x:Name="PART_Track"/>
                            <Decorator x:Name="PART_Indicator" HorizontalAlignment="Left">
                                <Grid x:Name="Indicator" ClipToBounds="True">
                                    <Rectangle x:Name="IndicatorRect" Fill="{TemplateBinding Foreground}"/>
                                </Grid>
                            </Decorator>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <tb:TaskbarIcon x:Name="MyNotifyIcon"
                        IconSource="/Assets/app.ico"
                        ToolTipText="Pomodoro Clock"
                        MenuActivation="RightClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Toggle Widget" Command="{Binding ToggleWidgetVisibilityCommand}"/>
                    <MenuItem Header="Settings" Command="{Binding OpenSettingsCommand}"/>
                    <Separator/>
                    <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>

        <Viewbox Stretch="Uniform" VerticalAlignment="Bottom">
            <!-- 畫布高度微調至 125，更緊湊 -->
            <Border Width="350" Height="125"
                    CornerRadius="25" 
                    Background="{Binding CurrentBackgroundColor}"
                    Padding="15,0,15,0" 
                    MouseLeftButtonDown="BackgroundBorder_MouseLeftButtonDown">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="28"/> <!-- 增加區域高度 -->
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 時間數字：Margin-Bottom 改為 0 讓它靠近進度條 -->
                        <TextBlock Grid.Column="0"
                                   Text="{Binding DisplayTime}" 
                                   FontSize="90" 
                                   FontFamily="{Binding Settings.FontFamily}"
                                   Foreground="{Binding Settings.TextColorBrush}"
                                   FontWeight="{Binding Settings.SelectedFontWeight}"
                                   Style="{StaticResource BlinkingTextStyle}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   Margin="5,-10,15,0"/>

                        <!-- 按鈕 -->
                        <Button Grid.Column="1" 
                                Command="{Binding TogglePhaseCommand}"
                                PreviewMouseLeftButtonDown="Button_PreviewMouseLeftButtonDown"
                                Width="60"
                                Height="60"
                                Foreground="{Binding Settings.TextColorBrush}"
                                Background="Transparent" 
                                BorderBrush="{Binding Settings.TextColorBrush}"
                                BorderThickness="2"
                                Cursor="Hand"
                                VerticalAlignment="Center">
                             <Button.Template>
                                 <ControlTemplate TargetType="Button">
                                     <Border x:Name="BtnBorder"
                                             Background="#10FFFFFF" 
                                             BorderBrush="{TemplateBinding BorderBrush}"
                                             BorderThickness="{TemplateBinding BorderThickness}"
                                             CornerRadius="20">
                                         <Viewbox Stretch="Uniform" Margin="12"> 
                                            <Path x:Name="BtnPath" 
                                                  Data="M 0,0 L 10,6 L 0,12 Z M 10,0 L 20,6 L 10,12 Z" 
                                                  Fill="{TemplateBinding Foreground}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                         </Viewbox>
                                     </Border>
                                     <ControlTemplate.Triggers>
                                         <Trigger Property="IsMouseOver" Value="True">
                                             <Setter TargetName="BtnBorder" Property="Background" Value="#30FFFFFF"/>
                                             <Setter TargetName="BtnPath" Property="Opacity" Value="0.8"/>
                                         </Trigger>
                                     </ControlTemplate.Triggers>
                                 </ControlTemplate>
                             </Button.Template>
                        </Button>
                    </Grid>

                    <!-- 下方進度條：視覺 16px，區域 28px -->
                    <Button Grid.Row="1"
                            Command="{Binding TogglePauseCommand}"
                            Height="28"
                            BorderThickness="0"
                            Background="Transparent"
                            Cursor="Hand"
                            VerticalAlignment="Bottom">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid Background="Transparent"> 
                                    <ProgressBar x:Name="InnerProgressBar"
                                                 Value="{Binding ProgressValue, Mode=OneWay}" 
                                                 Maximum="1.0"
                                                 Minimum="0.0"
                                                 Height="16"
                                                 Foreground="{Binding CurrentPhaseColor}"
                                                 Style="{StaticResource FlatProgressBarStyle}"
                                                 VerticalAlignment="Center"
                                                 IsHitTestVisible="False"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="InnerProgressBar" Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
        </Viewbox>
    </Grid>
</Window>