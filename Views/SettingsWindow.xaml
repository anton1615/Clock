<Window x:Class="clock.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="550" Width="320"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F0F0">
    
    <Window.Resources>
        <Style x:Key="ColorCircleStyle" TargetType="Button">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Margin" Value="0,0,6,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                BorderBrush="#CCC" 
                                BorderThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="â± Durations (Next Phase)" FontWeight="Bold" Margin="0,0,0,10"/>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Work (min)"/>
                    <TextBox x:Name="WorkDurationBox" Padding="5"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Break (min)"/>
                    <TextBox x:Name="BreakDurationBox" Padding="5"/>
                </StackPanel>
            </Grid>

            <Separator Margin="0,10"/>
            <TextBlock Text="ðŸŽ¨ Appearance (Live)" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Background Opacity (0-255)"/>
            <Slider x:Name="AlphaSlider" Minimum="0" Maximum="255" Margin="0,0,0,10"/>

            <TextBlock Text="Window Size"/>
            <!-- ç¢ºä¿æœ€å°å€¼å¤ å°ï¼Œå…è¨±ç¸®å¾—å¾ˆå° -->
            <Slider x:Name="WindowSizeSlider" Minimum="15" Maximum="150" Margin="0,0,0,10"/>

            <CheckBox x:Name="BoldCheck" Content="Font Bold" Margin="0,5,0,10" FontWeight="Bold"/>

            <TextBlock Text="Font Family"/>
            <ComboBox x:Name="FontFamilyCombo" Margin="0,0,0,10" Padding="5" DisplayMemberPath="Source">
                <!-- Will be populated in code-behind -->
            </ComboBox>

            <TextBlock Text="Sound Path"/>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="SoundPathBox" IsReadOnly="True" VerticalContentAlignment="Center" Padding="5"/>
                <Button Grid.Column="1" Content="Browse..." Click="BrowseSound_Click" Padding="10,0" Margin="5,0,0,0"/>
            </Grid>

            <!-- Text Color -->
            <TextBlock Text="Text Color"/>
            <StackPanel Margin="0,0,0,10">
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border x:Name="TextColorPreview" Width="24" Height="24" CornerRadius="12" BorderBrush="Gray" BorderThickness="1" Margin="0,0,8,0"/>
                    <TextBox x:Name="TextColorBox" Grid.Column="1" Padding="5"/>
                </Grid>
                <WrapPanel x:Name="TextColorPresets"/>
            </StackPanel>

            <!-- Work Color -->
            <TextBlock Text="Work Bar Color"/>
            <StackPanel Margin="0,0,0,10">
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border x:Name="WorkColorPreview" Width="24" Height="24" CornerRadius="12" BorderBrush="Gray" BorderThickness="1" Margin="0,0,8,0"/>
                    <TextBox x:Name="WorkColorBox" Grid.Column="1" Padding="5"/>
                </Grid>
                <WrapPanel x:Name="WorkColorPresets"/>
            </StackPanel>

            <!-- Break Color -->
            <TextBlock Text="Break Bar Color"/>
            <StackPanel Margin="0,0,0,10">
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border x:Name="BreakColorPreview" Width="24" Height="24" CornerRadius="12" BorderBrush="Gray" BorderThickness="1" Margin="0,0,8,0"/>
                    <TextBox x:Name="BreakColorBox" Grid.Column="1" Padding="5"/>
                </Grid>
                <WrapPanel x:Name="BreakColorPresets"/>
            </StackPanel>

            <TextBlock Text="Notification Volume"/>
            <Slider x:Name="VolumeSlider" Minimum="0" Maximum="100" Margin="0,0,0,20"/>

            <Button Content="Save &amp; Close" Click="Save_Click" Height="40" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </ScrollViewer>
</Window>