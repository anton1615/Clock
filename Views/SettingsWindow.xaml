<Window x:Class="clock.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="550" Width="320"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F0F0">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="â± Durations (Next Phase)" FontWeight="Bold" Margin="0,0,0,10"/>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Work (min)"/>
                    <TextBox x:Name="WorkDurationBox" Padding="5"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Break (min)"/>
                    <TextBox x:Name="BreakDurationBox" Padding="5"/>
                </StackPanel>
            </Grid>

            <Separator Margin="0,10"/>
            <TextBlock Text="ðŸŽ¨ Appearance (Live)" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Background Opacity (0-255)"/>
            <Slider x:Name="AlphaSlider" Minimum="0" Maximum="255" Margin="0,0,0,10"/>

            <TextBlock Text="Font Size (Window Size)"/>
            <!-- ç¢ºä¿æœ€å°å€¼å¤ å°ï¼Œå…è¨±ç¸®å¾—å¾ˆå° -->
            <Slider x:Name="WindowSizeSlider" Minimum="15" Maximum="150" Margin="0,0,0,10"/>

            <CheckBox x:Name="BoldCheck" Content="Font Bold" Margin="0,5,0,10" FontWeight="Bold"/>

            <TextBlock Text="Font Family (e.g. Segoe UI)"/>
            <TextBox x:Name="FontFamilyBox" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="Text Color (Hex/Name)"/>
            <TextBox x:Name="TextColorBox" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="Work Color (Hex/Name)"/>
            <TextBox x:Name="WorkColorBox" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="Break Color (Hex/Name)"/>
            <TextBox x:Name="BreakColorBox" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="Notification Volume"/>
            <Slider x:Name="VolumeSlider" Minimum="0" Maximum="100" Margin="0,0,0,20"/>

            <Button Content="Save &amp; Close" Click="Save_Click" Height="40" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </ScrollViewer>
</Window>